<table class="index">
  <tr>
    <th><%= t('name') %></th>
    <th><%= t('description') %></th>
    <th><%= t('value') %></th>
  </tr>
  <% options.each do |option| 
     option_value = option_values.select { |v| v.gateway_option_id == option.id }.first
  %>
  <tr>
    <td><%=option.name%></td>
    <td><%=option.description%></td>
    <td>
      <% if option.textarea %>
        <textarea name="option[<%=option.id%>]" 
                  rows="5" 
                  cols="26"><%= (option_value.nil? ? '' : option_value.value) %></textarea>
      <% else %>
        <input type="text" 
               size="26"
               name="option[<%=option.id%>]" 
               value="<%= (option_value.nil? ? '' : option_value.value) %>" style="width: 228px"/>
      <% end %>
    </td>
  </tr>
  <% end %>
  <% if options.empty? %>
    <tr><td colspan="3"><%= t('none') %>.</td></tr>
  <% end%>
</table>
